@model PhotoContest.Infrastructure.Models.ViewModels.Picture.FullPictureViewModel
@{ var picId = "pictureVotes" + Model.Id;}

<div class="modal" id="modal-@Model.Id">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal-@Model.Id" aria-hidden="true">X</button>
                <h4 class="modal-title">Picture #@Model.Id</h4>
            </div>
            <div class="modal-body">
                    <img src="@Model.Url" class="img-thumbnail" />
            </div>
            <div class="modal-footer">
                <p><strong>Uploader: </strong> @Model.UserName</p>
                <span class="badge">Votes </span>
                <span class="badge" id="@picId">@Model.Votes</span>

                @Ajax.ActionLink("Vote", "Vote", "Pictures", new { Area = "", id = @Model.Id }, new AjaxOptions { UpdateTargetId = "pictureVotes" + @Model.Id, InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnComplete = "ajaxHelper.OnFailure" }, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
</div>