@model PhotoContest.Infrastructure.Models.ViewModels.Contest.ContestViewModel

<div class="panel panel-primary contest-panel">
    <div class="panel-heading">
        <div class="pull-right">@Html.Partial("_ContestButtonsPartial", Model)</div>
        <h4>
            <span class="label label-primary">Title: </span>
            @Html.ActionLink(@Model.Title, "PreviewContest", "Contests", new { id = @Model.Id }, null)
        </h4>
    </div>
    <div class="panel-body">
        <span class="label label-primary">Description: </span>
        <p>@Model.Description</p>
    </div>
</div>