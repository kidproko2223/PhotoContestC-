<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Photo Contest" />
    <title>@ViewBag.Title - Photo Contest</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Photo Contest", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.Partial("_NavigationPartial")
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div id="notifications"></div>
<div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Photo Contest</p>
        </footer>
</div>
    @Scripts.Render("~/bundles/jquery")
    <script src="/signalr/hubs"></script>
    @Scripts.Render("~/bundles/signalR")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>